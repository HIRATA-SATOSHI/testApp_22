<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Subject</th>
      <th>Responsible person</th>
      <th>Origin</th>
      <th>Priority</th>
      <th>Response deadline</th>
      <th>Requirement</th>
      <th>Other point</th>
      <th>Description</th>
      <th>Content</th>
      <th>Staus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.contact_id %></td>
        <td><%= contact.subject %></td>
        <td><%= contact.responsible_person %></td>
        <td><%= contact.origin %></td>
        <td><%= contact.priority %></td>
        <td><%= contact.response_deadline %></td>
        <td><%= contact.requirement %></td>
        <td><%= contact.other_point %></td>
        <td><%= contact.description %></td>
        <td><%= contact.content %></td>
        <td><%= contact.staus %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

